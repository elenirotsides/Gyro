<div class="ml-5">

    {{#if hasErrors}}
    <span class="p-1 mb-2 bg-danger text-white">{{error}}
    </span>
    {{/if}}

    <H1 class="enterInfo">Register Here</H1>
    <form action="/register" class="form-inline" method="POST" id="registration_form">
        <div class="form-group">
            <label for="firstName">First Name</label>
            <input type="text" class="form-control input-lg" name="firstName" id="firstName" required />
        </div>
        <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" class="form-control input-lg" name="lastName" id="lastName" required />
        </div>
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" class="form-control input-lg" name="email" id="email" required />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control input-lg" name="password" id="password" required />
        </div>


        <input type="submit" class="btn btn-primary mt-2" value="Submit">
    </form>
</div>