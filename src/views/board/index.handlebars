<div class="kanban_board">
    <div class="pending">
        <H2 class="title">Pending</H2>
        {{#each pending_tasks}}
        <li>{{taskName}}</li>
        <form action="/tasks/{{_id}}/edit" method="GET" id="edit_task">
            <input type="submit" value="Edit">
        </form>
        {{/each}}
    </div>
    <div class="in_progress">
        <H2 class="title">In Progress</H2>
        {{#each in_progress_tasks}}
        <div class="task">{{taskName}}
            {{createdBy}}
            {{tags}}
            <form action="/tasks/{{_id}}/edit" method="GET" id="edit_task">
                <input type="submit" value="Edit">
            </form>
        </div>
        {{/each}}
    </div>
    <div class="review">
        <H2 class="title">Review</H2>
        {{#each review_tasks}}
        <li>{{taskName}}
            <form action="/tasks/{{_id}}/edit" method="GET" id="edit_task">
                <input type="submit" value="Edit">
            </form>
        </li>
        {{/each}}
    </div>
    <div class="done">
        <H2 class="title">Done</H2>
        {{#each done_tasks}}
        <li>{{taskName}}
            <form action="/tasks/{{_id}}/edit" method="GET" id="edit_task">
                <input type="submit" value="Edit">
            </form>
        </li>
        {{/each}}
    </div>
</div>

<form action="/tasks/create" method="GET" id="add_task">
    <input type="submit" value="Add a Task">
</form>